<h1>List of all directors</h1>

<table border="1;">
  <thead>
    <th>ID</th>
    <th>Image</th>
    <th>Name</th>
    <th>Dob</th>
    <th></th>
  </thead>
  <tbody>
    <% @director_tab.each do |direct| %>
      <tr>
        <td><%= direct.id%></td>
        <td><img src=<%= direct.image%> style="width:250px;"></td>
        <td><%= direct.name%></td>
        <td><%= direct.dob%></td>
        <td><a href="/directors/<%=direct.id.to_s%>">Show details</td>
      </tr>
    <% end %>
  </tbody>
</table>
