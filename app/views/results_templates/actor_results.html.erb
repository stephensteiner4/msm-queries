<h1>Actor #<%= @act_id%> Details</h1>
<a href="/actors">Go back</a>

<hr>

<dl>
  <dt>Name</dt>
    <dd> <%= @act_info.name %> </dd>
  <dt>Dob</dt>
    <dd> <%= @act_info.dob %> </dd>
  <dt>Bio</dt>
    <dd> <%= @act_info.bio %> </dd>
  <dt>Image</dt>
    <dd> <img src=<%= @act_info.image %> style="width:250px;"> </dd>
  <dt>Created at</dt>
    <dd> <%= @act_info.created_at %> </dd>
  <dt>Updated at</dt>
    <dd> <%= @act_info.updated_at %> </dd>

</dl>

<hr>

<h2>Filmography</h2>

<table border="1;">
  <thead>
    <th>Title</th>
    <th>Year</th>
    <th>Director</th>
    <th>Character Name</th>
    <th></th>
  </thead>

  <tbody>
    <% @char_list.each do |char| %>
      <% x = Movie.where({:id => char.movie_id}).at(0).director_id %>
      <tr>
        <td><%= Movie.where({:id => char.movie_id}).at(0).title%></td>
        <td><%= Movie.where({:id => char.movie_id}).at(0).year%></td>
        <td><%= Director.where({:id => x}).at(0).name%></td>
        <td><%= char.name%></td>
        <td><a href="/movies/<%= char.movie_id.to_s%>">Show details</a> 
      </tr>
    <% end %>
  </tbody>


</table>
